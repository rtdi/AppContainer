<mvc:XMLView height="100vh" class="sapUiSizeCompact"
	displayBlock="true" id="mainview" controllerName="ui5app.Controller"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:t="sap.ui.table" xmlns:dnd="sap.ui.core.dnd"
	xmlns:ui5libs="ui5libs" xmlns:ui5app="ui5app" xmlns:core="sap.ui.core">
	<ui5libs:controls.AppContainerPage
		pageTitle="SQL">
		<Panel height="100%">
			<dependents>
				<core:CommandExecution command="CompileCode" enabled="true" execute=".onCompile" />
			</dependents>
			<headerToolbar>
				<OverflowToolbar style="Clear">
					<Text id="headertext" />
					<ToolbarSpacer />
					<Button icon="sap-icon://media-play" tooltip="Execute" press=".onCompile"/>
					<Button icon="sap-icon://save" tooltip="Save" press=".onSave"/>
					<Button icon="sap-icon://open-folder" tooltip="Load" press=".onLoad"/>
					<Button icon="sap-icon://write-new-document" tooltip="Open in FreeForm SQL" press=".onFreeFormSQL"/>
				</OverflowToolbar>
			</headerToolbar>
			<content>
				<VBox height="100%">
					<ui5app:controls.Query id="query">
					</ui5app:controls.Query>
					<TextArea id="sqltext" width="100%" editable="false" growing="true" growingMaxLines="15" />
					<VBox id="datatablecontainer" >
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</VBox>
				</VBox>
			</content>
		</Panel>
	</ui5libs:controls.AppContainerPage>
</mvc:XMLView>
