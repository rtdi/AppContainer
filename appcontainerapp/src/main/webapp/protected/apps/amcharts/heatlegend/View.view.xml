<mvc:View height="100vh"
	controllerName="ui5app.Controller"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:ui5libs="ui5libs"
	>
	<ui5libs:controls.AppContainerPage pageTitle="Heat Legend">
	    <ui5libs:amcharts.Chart
	    	id="dependencychart"
	    	width="100%"
	    	height="100%"
	    	>
			<ui5libs:layoutData>
				<FlexItemData growFactor="1" />
			</ui5libs:layoutData>
			<ui5libs:children>
				<ui5libs:amcharts.base.RadarChart
					 innerRadius="50%"
					 panX="false"
					 panY="false"
					 wheelX="panX"
					 wheelY="zoomX"
					 maxTooltipDistance="0"
					 layout="verticalLayout"
				>
				   	<ui5libs:customData>
				   		<ui5libs:controls.JsonContainer key="model" url="ui5app/data.json" />
				   	</ui5libs:customData>
					<ui5libs:xAxis>
						<ui5libs:amcharts.base.CategoryAxis
							categoryField="hour"
							componentData="{/hours}"
						>
						</ui5libs:amcharts.base.CategoryAxis>
					</ui5libs:xAxis>
					<ui5libs:rendererX>
						<ui5libs:amcharts.base.AxisRendererCircular
							visible="false"
							minGridDistance="30"
							startAngle="70"
							endAngle="-250"
						>
							<ui5libs:labels>
								<ui5libs:amcharts.base.AxisLabelRadial
									textType="circular"
									radius="10"
									fontSize="8pt"
								>
								</ui5libs:amcharts.base.AxisLabelRadial>
							</ui5libs:labels>
						</ui5libs:amcharts.base.AxisRendererCircular>
					</ui5libs:rendererX>
					<ui5libs:yAxis>
						<ui5libs:amcharts.base.CategoryAxis
							maxDeviation="0"
							categoryField="weekday"
							componentData="{/weekdays}"
						>
						</ui5libs:amcharts.base.CategoryAxis>
					</ui5libs:yAxis>
					<ui5libs:rendererY>
						<ui5libs:amcharts.base.AxisRendererRadial
							visible="false"
							axisAngle="90"
							minGridDistance="10"
							inversed="true"
						>
							<ui5libs:labels>
								<ui5libs:amcharts.base.AxisLabelRadial
									textType="circular"
									textAlign="center"
									radius="-8"
									fontSize="8pt"
								>
								</ui5libs:amcharts.base.AxisLabelRadial>
							</ui5libs:labels>
						</ui5libs:amcharts.base.AxisRendererRadial>
					</ui5libs:rendererY>
					<ui5libs:series>
						<ui5libs:amcharts.base.RadarColumnSeries
							calculateAggregates="true"
							name="value" 
							xAxisIndex="0" 
							yAxisIndex="0" 
							categoryXField="hour"
							categoryYField="weekday"
							valueField="value"
							clustered="false"
							componentData="{/series}"
							templateName="Columns"
						>
							<ui5libs:heatRules>
								<ui5libs:amcharts.base.IHeatRule
									minColor="#fffb77"
									maxColor="#fe131a"
									dataField="value"
									key="fill"
									targetTemplateName="Columns"
								>
								</ui5libs:amcharts.base.IHeatRule>
							</ui5libs:heatRules>
						</ui5libs:amcharts.base.RadarColumnSeries>
					</ui5libs:series>
					<ui5libs:children>
						<ui5libs:amcharts.base.HeatLegend
							orientation="horizontal"
							endColor="#fffb77"
							startColor="#fe131a"
						>
						</ui5libs:amcharts.base.HeatLegend>
					</ui5libs:children>
				</ui5libs:amcharts.base.RadarChart>
			</ui5libs:children>
	    </ui5libs:amcharts.Chart>
    </ui5libs:controls.AppContainerPage>
</mvc:View>
