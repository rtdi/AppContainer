<mvc:View height="100vh"
	controllerName="ui5app.Controller"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:ui5libs="ui5libs"
	>
	<ui5libs:controls.AppContainerPage pageTitle="Bubble Chart">
	    <ui5libs:amcharts.Chart
	    	id="dependencychart"
	    	width="100%"
	    	height="100%"
	    	>
			<ui5libs:layoutData>
				<FlexItemData growFactor="1" />
			</ui5libs:layoutData>
			<ui5libs:children>
				<ui5libs:amcharts.base.XYChart
					panX="true"
					panY="true"
					wheelY="zoomXY"
					pinchZoomX="true"
					pinchZoomY="true"
				>
				   	<ui5libs:customData>
				   		<ui5libs:controls.JsonContainer key="model" url="ui5app/data.json" />
				   	</ui5libs:customData>
					<ui5libs:xAxis>
						<ui5libs:amcharts.base.ValueAxis
						>
						</ui5libs:amcharts.base.ValueAxis>
					</ui5libs:xAxis>
					<ui5libs:yAxis>
						<ui5libs:amcharts.base.ValueAxis
						>
						</ui5libs:amcharts.base.ValueAxis>
					</ui5libs:yAxis>
					<ui5libs:rendererX>
						<ui5libs:amcharts.base.AxisRendererX
							minGridDistance="50"
						/>
					</ui5libs:rendererX>
					<ui5libs:series>
						<ui5libs:amcharts.base.LineSeries
							calculateAggregates="true"
							xAxisIndex="0" 
							yAxisIndex="0" 
							valueYField="y" 
							valueXField="x"
							valueField="value"
							componentData="{/}"
						>
							<ui5libs:strokes>
								<ui5libs:amcharts.base.Graphics
									strokeOpacity="0"
								>
								</ui5libs:amcharts.base.Graphics>
							</ui5libs:strokes>
							<ui5libs:bullets>
								<ui5libs:amcharts.base.Bullet
									templateName="Bullet"
								>
									<ui5libs:sprite>
										<ui5libs:amcharts.base.Circle
										>
										</ui5libs:amcharts.base.Circle>
									</ui5libs:sprite>
								</ui5libs:amcharts.base.Bullet>
							</ui5libs:bullets>
							<ui5libs:heatRules>
								<ui5libs:amcharts.base.IHeatRule
									min="3"
									max="50"
									dataField="value"
									key="radius"
									targetTemplateName="Bullet"
								>
								</ui5libs:amcharts.base.IHeatRule>
							</ui5libs:heatRules>
						</ui5libs:amcharts.base.LineSeries>
					</ui5libs:series>
				</ui5libs:amcharts.base.XYChart>
			</ui5libs:children>
	    </ui5libs:amcharts.Chart>
    </ui5libs:controls.AppContainerPage>
</mvc:View>
