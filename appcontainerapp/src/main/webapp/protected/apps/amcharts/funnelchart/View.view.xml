<mvc:View height="100vh"
	controllerName="ui5app.Controller"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:ui5libs="ui5libs"
	>
	<ui5libs:controls.AppContainerPage pageTitle="Funnel Chart">
	    <ui5libs:amcharts.Chart
	    	id="dependencychart"
	    	width="100%"
	    	height="100%"
	    	>
			<ui5libs:layoutData>
				<FlexItemData growFactor="1" />
			</ui5libs:layoutData>
			<ui5libs:children>
				<ui5libs:amcharts.base.SlicedChart
					layout="horizontalLayout"
				>
				   	<ui5libs:customData>
				   		<ui5libs:controls.JsonContainer key="model" url="ui5app/data.json" />
				   	</ui5libs:customData>
					<ui5libs:series>
						<ui5libs:amcharts.base.FunnelSeries
							name="Series" 
							valueField="applicants" 
							categoryField="stage" 
							componentData="{/}"
						    orientation="vertical"
						    alignLabels="true"
						    bottomRatio="1"
						    width="90%"
						>
						</ui5libs:amcharts.base.FunnelSeries>
					</ui5libs:series>
				</ui5libs:amcharts.base.SlicedChart>
			</ui5libs:children>
	    </ui5libs:amcharts.Chart>
    </ui5libs:controls.AppContainerPage>
</mvc:View>
