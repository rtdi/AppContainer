<mvc:View height="100vh"
	controllerName="ui5app.Controller"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:ui5libs="ui5libs"
	>
	<ui5libs:controls.AppContainerPage pageTitle="Radar Chart">
	    <ui5libs:amcharts.Chart
	    	id="dependencychart"
	    	width="100%"
	    	height="100%"
	    	>
			<ui5libs:layoutData>
				<FlexItemData growFactor="1" />
			</ui5libs:layoutData>
			<ui5libs:children>
				<ui5libs:amcharts.base.RadarChart
					wheelY="zoomX"
					layout="horizontalLayout"
					innerRadius="20%"
				>
				   	<ui5libs:customData>
				   		<ui5libs:controls.JsonContainer key="model" url="ui5app/data.json" />
				   	</ui5libs:customData>
					<ui5libs:xAxis>
						<ui5libs:amcharts.base.DateAxis
							componentData="{/}"
						>
							<ui5libs:baseInterval>
								<ui5libs:amcharts.base.ITimeInterval timeUnit="day" count="1" />
							</ui5libs:baseInterval>
						</ui5libs:amcharts.base.DateAxis>
					</ui5libs:xAxis>
					<ui5libs:rendererX>
						<ui5libs:amcharts.base.AxisRendererCircular
							minGridDistance="20"
							cellStartLocation="0.2"
							cellEndLocation="0.8"
						>
							<ui5libs:labels>
								<ui5libs:amcharts.base.AxisLabelRadial
									fontSize="12pt"
								>
								</ui5libs:amcharts.base.AxisLabelRadial>
							</ui5libs:labels>
						</ui5libs:amcharts.base.AxisRendererCircular>
					</ui5libs:rendererX>
					<ui5libs:yAxis>
						<ui5libs:amcharts.base.ValueAxis
						>
						</ui5libs:amcharts.base.ValueAxis>
					</ui5libs:yAxis>
					<ui5libs:rendererY>
						<ui5libs:amcharts.base.AxisRendererRadial
							minGridDistance="20"
						>
							<ui5libs:labels>
								<ui5libs:amcharts.base.AxisLabelRadial
									visible="false"
								>
								</ui5libs:amcharts.base.AxisLabelRadial>
							</ui5libs:labels>
						</ui5libs:amcharts.base.AxisRendererRadial>
					</ui5libs:rendererY>
					<ui5libs:series>
						<ui5libs:amcharts.base.RadarColumnSeries
							name="value" 
							xAxisIndex="0" 
							yAxisIndex="0" 
							valueYField="value" 
							valueXField="date"
							clustered="true"
							componentData="{/}"
						>
							<ui5libs:tooltip>
								<ui5libs:amcharts.base.Tooltip
									labelText="[bold]\{name\}[/]\n\{valueX.formatDate()\}: \{valueY\}"
								>
								</ui5libs:amcharts.base.Tooltip>
							</ui5libs:tooltip>
						</ui5libs:amcharts.base.RadarColumnSeries>
						<ui5libs:amcharts.base.RadarColumnSeries
							name="value2" 
							xAxisIndex="0" 
							yAxisIndex="0" 
							valueYField="value2" 
							valueXField="date"
							clustered="true"
							componentData="{/}"
						>
						</ui5libs:amcharts.base.RadarColumnSeries>
					</ui5libs:series>
					<!-- <ui5libs:cursor>
						<ui5libs:amcharts.base.RadarCursor
							behavior="zoomX" 
							xAxisIndex="0" 
						>
						</ui5libs:amcharts.base.RadarCursor>
					</ui5libs:cursor>  -->
				</ui5libs:amcharts.base.RadarChart>
			</ui5libs:children>
	    </ui5libs:amcharts.Chart>
    </ui5libs:controls.AppContainerPage>
</mvc:View>
