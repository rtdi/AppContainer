FROM rtdi/connectorrootapp

LABEL maintainer="info@rtdi.io"

ADD https://github.com/rtdi/AppContainerRealm/releases/latest/download/dbrealmbase.jar ./lib
ADD https://github.com/rtdi/AppContainerRealm/releases/latest/download/snowflakerealm.jar ./lib
ADD https://repo1.maven.org/maven2/net/snowflake/snowflake-jdbc/3.13.26/snowflake-jdbc-3.13.26.jar ./lib
ADD https://raw.githubusercontent.com/rtdi/AppContainer/master/docker/server-snowflake.xml conf/server.xml
ADD https://github.com/rtdi/AppContainer/releases/latest/download/AppContainer.war ./webapps/

EXPOSE 8080
EXPOSE 8443


CMD ["catalina.sh", "run"]
